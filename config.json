{
  "model": {
    "vocab_size": 10000,
    "context_length": 512,
    "n_layers": 6,
    "n_heads": 8,
    "n_embd": 512,
    "dropout": 0.1,
    "bias": false,
    "use_rope": true,
    "use_rmsnorm": true,
    "use_swiglu": true,
    "flash_attention": true,
    "tie_weights": true
  },
  "training": {
    "batch_size": 8,
    "gradient_accumulation_steps": 4,
    "max_epochs": 10,
    "learning_rate": 3e-4,
    "betas": [0.9, 0.95],
    "weight_decay": 0.1,
    "eps": 1e-8,
    "min_lr": 1e-6,
    "max_grad_norm": 1.0,
    "use_amp": true,
    "early_stop_patience": 3,
    "save_interval": 5,
    "log_interval": 100
  },
  "data": {
    "block_size": 512,
    "stride": 256
  }
}

